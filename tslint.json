{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format"
    ],
    "interface-name": {
      "options": [
        "never-prefix"
      ]
    },
    "max-line-length": [true, 150],
    "indent": [true, "spaces", 2],
    "no-console": [true, "log"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-ordering": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}